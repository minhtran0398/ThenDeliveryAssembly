@inherits UserLineBase

@if (UserItem != null)
{
	<tr>
		<td>@UserItem.UserName</td>
		<td>
			@UserItem.Email - @(UserItem.IsEmailConfirmed ? "Đã xác thực" : "Chưa xác thực")
		</td>
      <td>@UserItem.PhoneNumber - @(UserItem.IsPhoneNumberConfirmed ? "Đã xác thực" : "Chưa xác thực")</td>
		<td>@UserItem.BirthDate.ToString("dd/MM/yyyy")</td>
		<td>
			@if (UserItem.RoleList != null)
			{
				@foreach (var role in UserItem.RoleList)
				{
					switch (role.Name)
					{
						case Const.Role.AdministrationRole:
							<span class="badge badge-pill badge-primary">@Const.Role.AdministrationRole</span>
							break;
						case Const.Role.UserRole:
							<span class="badge badge-pill badge-success">@Const.Role.UserRole</span>
							break;
						case Const.Role.MerchantRole:
							<span class="badge badge-pill badge-info">@Const.Role.MerchantRole</span>
							break;
						case Const.Role.ShipperRole:
							<span class="badge badge-pill badge-warning">@Const.Role.ShipperRole</span>
							break;
					}
				}
			}
		</td>
		@*<td class="pl-0 pr-0">
			<button class="btn btn-sm btn-primary"
					  @onclick="HandleOnEdit"
					  @onclick:stopPropagation>
				Edit
			</button>
		</td>
		<td class="pl-0 pr-0">
			<button class="btn btn-sm btn-danger"
					  @onclick="HandleOnDelete"
					  @onclick:stopPropagation>
				Delete
			</button>
		</td>*@
	</tr>
}
