@inherits ProductItemBase

@if(Product != null)
{
<div class="item-restaurant-row">
	<div class="row">
		<div class="col-auto item-restaurant-img">
			<div class="inline">
				<img src="@Product.Image" alt="@Product.Name" class="merchant-home-product-image">
			</div>
		</div>
		<div class="col item-restaurant-info">
			<h3 class="item-restaurant-name">@Product.Name</h3>
			<div class="item-restaurant-desc">@Product.Description</div>
			<div class="item-restaurant-total" style="position: absolute;">Đã được đặt<span class="txt-bold">&nbsp;@Product.OrderCount&nbsp;</span>lần</div>
		</div>
		<div class="col-auto item-restaurant-more">
			<div class="row ">
				<div class="col-auto product-price">
					<div class="current-price">
						@Product.UnitPrice.ToString("N0")<span style="font-weight: 400;position: relative;top: -9px;font-size: 10px;right: 0;">đ</span>
					</div>
				</div>
				<div class="col-auto adding-food-cart txt-right">
					@if(Product.IsAvailable)
					{
						<button class="btn btn-sm btn-danger btn-add-product"
								@onclick="async () => await HandleAddProductOrder(Product)">
							+
						</button>
					}
					else
					{
						<span class="badge badge-pill badge-danger">Tạm ngừng</span>
					}
				</div>
			</div>
		</div>
	</div>
</div>
}
