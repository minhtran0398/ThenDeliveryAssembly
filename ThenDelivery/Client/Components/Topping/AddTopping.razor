				<div class="col-xs-12 form-item__label">Giá<span class="form-item__label--important">&nbsp;*</span></div>
				<div class="col-xs-12 form-item__control-wrapper undefined">
					<div class="input"><input value="0"></div>
				</div>
			</div>
		</div>
		<div class="col-xs-2 topping-set__topping-item-input--action"></div>
	</div>
	<span class="topping-set__item-input--add-btn">Thêm Topping</span>
	<div class="register-shop__form-footer topping-set__item-input--submit">
		<button class="btn" type="button">
			<span class="btn__text">Huỷ</span>
		</button><button class="btn btn--primary" type="button">
			<span class="btn__text">Lưu</span>
		</button>
	</div>
